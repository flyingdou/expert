page{
  height: 100%;
  background-color: #DFDFDD;
  overflow: hidden;
}

.wraper{
  display: flex;
  justify-content: flex-start;
  width: 200%;
  transition: 0.5s;
}

/* 表单 */
.form{
  position: relative;
  width: 50%;
}

/* 图片上传 */
.upload-message{
  width: 100%;
  height: 140px;
  text-align: center;
  line-height: 140px;
  font-size: 28rpx;
  color: #ACA9A9;
  background-color: #F8F8F8;
}

.image{
  display: block;
  width: 100%;
  height: 140px;
}

/* 表单行 */
.line{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #F0F0F2;
  background-color: #FFF;
}

.line-left{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 50%;
  color: #030303;
}

.line-right{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 50%;
  color: #ACA9A9;
}

.input{
  text-align: right;
}

.more-icon{
  display: block;
  width: 32rpx;
  height: 32rpx;
}

/* 注意事项 */
.memo-wraper{
  font-size: 28rpx;
  background-color: #FFF;
}

.memo-title{
  padding: 20rpx;
}

.memo-content{
  padding: 20rpx;
  padding-top: 0;
  height: 160rpx;
}

.memo-textarea{
  width: 100%;
  height: 160rpx;
  color: #ACA9A9;
}

/* 保存按钮 */
.submit-button{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.submit-button > image{
  display: block;
  width: 100%;
  height: 100%;
}

.submit-button-text{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #FFF;
}

.submit-button2{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #FFF;
  background-color: #FF4401;
}

/* other */
.other{
  position: relative;
  width: 50%;
}

.company{
  margin-left: 10rpx;
}

/* 挑战目标 */
.target-content{
  background-color: #FFF;
  font-size: 28rpx;
}

.target-content-title{
  padding: 20rpx;
  color: #ACA9A9;
  border-bottom: 1px solid #F8F8F8;
}

.line-height{
  height: 1.4rem;
}

.select-icon{
  display: block;
  width: 30rpx;
  height: 30rpx;
}

.target-title{
  margin-left: 20rpx;
}

/* 成功奖励 */
.award{
  padding: 20rpx;
  height: 300rpx;
  background-color: #FFF;
  font-size: 28rpx;
  color: #ACA9A9;
}

.award-textarea{
  width: 100%;
  height: 300rpx;
}

/* 失败惩罚 */
.memberImage{
  display: block;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}

.memberName{
  margin-left: 20rpx;
}

.member-memo{
  padding: 20rpx;
  font-size: 24rpx;
  color: #ACA9A9;
  background-color: #FFF;
  border-top: 1xp solid #F8F8F8;
}

