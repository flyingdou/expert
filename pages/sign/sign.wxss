page{
  height: 100%;
  background-color: #F2F2F2;
}

image{
  width: 100%;
  height: 100%;
  display: block;
}

/* 用户信息 */
.user-info{
  display: flex;
  justify-content: flex-start;
  align-content: center;
  padding: 40rpx 20rpx;
  background-color: #FFF;
}

.user-image{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  overflow: hidden;
}

.user-other-info{
  margin-left: 20rpx;
}

.user-nick{
  font-size: 28rpx;
  color: #030303;
}

.sign-count{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #ACA9A9;
}

.count{
  font-size: 26rpx;
  color: #FF4401;
}

/* 打卡时间 */
.sign-time-wraper{
  background-color: #FFF;
}

.sign-time-icon{
  width: 100%;
  height: 8rpx;
}

.sign-time{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  font-size: 28rpx;
}

.sign-time-text{
  color: #030303;
}

.sign-tim-content{
  color: #ACA9A9;
}

/* 签到数据 */
.form{
  background-color: #FFF;
  font-size: 28rpx;
}

.form-title{
  padding: 20rpx;
  color: #ACA9A9;
}

.form-content:last-child{
  border: 0;
}

.line{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 2rpx solid #F8F8F8;
}

.line-left{
  color: #030303;
}

.line-right{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  color: #ACA9A9;
}

.line-right > input{
  width: 80rpx;
  text-align: right;
}

.company{
  margin-left: 10rpx;
}

/* 提示信息 */
.message{
  padding: 40rpx 0;
}

.message-icon{
  margin: 0 auto;
  width: 70rpx;
  height: 70rpx;
}

.message-content{
  font-size: 28rpx;
  color: #ACA9A9;
  text-align: center;
}

/* 底部按钮 */
.buttons{
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  bottom: 20rpx;
  left: 0;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 28rpx;
}

.button{
  position: relative;
  width: 40%;
  height: 100%;
  border-radius: 10rpx;
}

.button-style1{
  color: #030303;
  background-color: #FFDD00;
}

.button-style2{
  color: #FFF;
  background-color: #FF4401;
}

.button-style3{
  color: #FFF;
  background-color: #ACA9A9;
}

/* 分享按钮 */
.share-button{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  background-color: transparent;
}

.share-button::after{
  border: none;
}


