page{
  width: 100%;
  height: 100%;
}

.wraper{
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #F2F2F2;
}

.no-data{
  position: absolute;
  top: 40%;
  left: 40%;
  text-align: center;
  font-size: 12px;
  color: #8f8e8e;
}

.no-data > image{
  width: 30px;
  height: 30px;
}

.ticket-list{
  padding: 10px;
}

.ticket-li{
  overflow: hidden;
}

.ticket-content{
  float: left;
  width: 80%;
  height: 90px;
  background-color: #FFF;
  margin-bottom: 20rpx;
}

.ticket-content-wraper{
  padding: 10px;
}

.ticket-name{
  font-size: 16px;
}

.ticket-type{
  margin-top: 10px;
  font-size: 14px;
  color: #8f8e8e;
}

.ticket-validity{
  margin-top: 5px;
  font-size: 12px;
  color: #8f8e8e;
}

.ticket-price{
  position: relative;
  float: right;
  width: 20%;
  height: 90px;
  line-height: 90px;
  text-align: center;
  background-color: #FF6600;
  font-size: 16px;
  color: #FFF;
}

.ticket-price > image{
  width: 100%;
  height: 100%;
}

.price-text{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 1000%;
  line-height: 90px;
  text-align: center;
  font-size: 16px;
  color: #FFF;
}

.RMB{
    font-size: 22rpx;
    color: white;
}