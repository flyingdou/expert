page{
  width: 100%;
  height: 100%;
}

image{
  width: 100%;
  height: 100%;
}

.background{
  position: relative;
  width: 100%;
  height: 100%;
  background: url('https://www.ecartoon.com.cn/expert/img/rose_background.png') no-repeat;
  background-size: 100% 100%;
}

.float-box{
  position: absolute;
  bottom: 40rpx;
  left: 0;
  width: 90%;
  padding: 0 5%;
}

.box{
  display: flex;
  justify-content: space-between;
}

.box-padding{
  padding-bottom: 40rpx;
}

.text-left{
  width: 20%;
  padding-bottom: 20rpx;
}

.text-right{
  width: 75%;
  font-size: 26rpx;
  color: #BBB;
}

.text-right > view{
  text-align: right;
}

.share-friend{
  position: relative;
  width: 45%;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  font-size: 28rpx;
  background-color: #FFDD00;
  border-radius: 10rpx;
}

.share-button{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: transparent;
}

.share-button::after{
  border: none;
}

.share-circle{
  width: 45%;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #FFF;
  background-color: #FF4401;
  border-radius: 10rpx;
}