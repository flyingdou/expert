page{
  width: 100%;
  height: 100%;
  background-color: #F0F0F2;
}

image, video{
  width: 100%;
  height: 100%;
}

/* 播放器 */
.player{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 10rpx;
  background-color: #FFF;
}

.prev, .next{
  width: 22rpx;
  height: 38rpx;
}

.video-block{
  width: 328px;
  height: 185px;
}

/* 组数信息 */
.action-group{
  background-color: #FFF;
}

.action-group-title{
  padding: 20rpx;
  font-size: 30rpx;
  color: #373636;
  border-bottom: 2rpx solid #F0F0F2;
}

.action-group-content{
  padding: 20rpx 0;
}

.group-info-title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  font-size: 24rpx;
  color: #686767;
}

.group-info-content{
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  font-size: 24rpx;
  color: #a9aaaa;
}

.group-info-title > view, .group-info-content > view{
  width: 25%;
}

/* 动作描述|注意事项 */
.action-descr{
  background-color: #FFF;
}

.action-descr-title{
  padding: 20rpx;
  font-size: 30rpx;
  color: #373636;
  border-bottom: 2rpx solid #F0F0F2;
}

.action-descr-content{
  padding: 20rpx;
}

.descr{
  font-size: 24rpx;
  color: #686767;
}

.regard{
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #a9aaaa;
}





