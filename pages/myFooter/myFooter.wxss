page{
  background-color: #F0F0F2;
}

.no-data{
  position: absolute;
  top: 40%;
  left: 40%;
  text-align: center;
  font-size: 12px;
  color: #8f8e8e;
}

.no-data > image{
  width: 30px;
  height: 30px;
}

.sign-title-time{
  margin-top: 10px;
  padding: 0 10px;
  font-size: 14px;
  color: #444;
}

.sign-content{
  margin-top: 10px;
  padding: 0 10px;
  overflow: hidden;
}

.sign-content-left{
  float: left;
  width: 40px;
  height: 20px;
  text-align: center;
  line-height: 20px;
  font-size: 12px;
  color: #FFF;
  background-color: #FF4401;
  border-radius: 20px;
}

.sign-content-right{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  float: left;
  margin-left: 10px;
  padding: 10px;
  width: 78%;
  overflow: hidden;
  background-color: #FFF;
  border-radius: 10px;
}

.sign-count-wraper{
  padding-right: 20rpx;
  border-right: 1px solid #F0F0F2;
}

.sign-healthy-icon{
  margin: 0 auto;
  width: 46rpx;
  height: 40rpx;
}

.sign-healthy-icon > image {
  display: block;
  width: 100%;
  height: 100%;
}

.sign-count{
  margin-top: 4rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

.sign-heartRates-wraper{
  padding-left: 20rpx;
}

.sign-message{
  font-size: 24rpx;
}

.sign-message-style1{
  color: #1ED01E;
}

.sign-message-style2{
  color: #FFDD00;
}

.sign-message-style3{
  color: #FF4401;
}

.sign-heartRates{
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #999;
}

.clubImage{
  float: left;
  width: 40px;
  height: 40px;
}

.clubInfo{
  float: left;
  margin-left: 10px;
  padding: 0 10px;
  width: 180px;
  border-left: 1px solid #F0F0F2;
}

.clubName{
  font-size: 14px;
  color: #444;
}

.clubScore{
  margin-top: 5px;
  font-size: 12px;
  color: #FF4401;
  overflow: hidden;
}

.totalScore{
  float: left;
}

.otherScore{
  float: left;
  margin-left: 10px;
  color: #BBB; 
}
