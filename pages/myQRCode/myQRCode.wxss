page{
  width: 100%;
  height: 100%;
  background-color: #000;
}

image{
  width: 100%;
  height: 100%;
}

.wraper{
  position: fixed;
  bottom: 20rpx;
  left: 0;
  padding: 0 10%;
  width: 80%;
}

.content{
  padding: 20rpx;
  background-color: #FFF;
}

.user-info{
  overflow: hidden;
}

.user-image{
  float: left;
  width: 90rpx;
  height: 90rpx;
}

.user-other{
  float: left;
  margin-left: 20rpx;
}

.user-name{
  margin-top: 10rpx;
  font-size: 28rpx;
}

.user-text{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #BBB;
}

.qrcode{
  margin: 0 auto;
  margin-top: 40rpx;
  width: 560rpx;
  height: 560rpx;
}

.tip{
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #BBB;
  text-align: center;
}

.tip > view{
  padding-bottom: 20rpx;
}

.save-button{
  margin: 0 auto;
  margin-top: 20rpx;
  width: 50%;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #FFF;
  background-color: #FF4401;
  border-radius: 10rpx;
}