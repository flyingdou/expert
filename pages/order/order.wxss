page{
  width: 100%;
  height: 100%;
}

.wraper{
  width: 100%;
  height: 100%;
  background-color: #E1E4E6;
}

.top-box{
  height: 3px;
  background-color: #E1E4E6;
}

.box_userInfo{
  padding: 10px;
  background-color: #FFF;
  overflow: hidden;
}

.userInfo{
  float: left;
  overflow: hidden;
}

.userInfo_photo{
  float: left;
}

.userInfo_photo > image{
  width: 50px;
  height: 50px;
  border-radius: 50%;
}

.userInfo_nick{
  float: right;
  margin-left: 10px;
  height: 50px;
  line-height: 50px;
  font-size: 15px;
}

.userInfo_phoneNumber{
  float: right;
  height: 50px;
  line-height: 50px;
}

.getPhoneNumber{
  padding: 0;
  height: 50px;
  line-height: 50px;
  text-align: right;
  background-color: #FFF;
  font-size: 15px;
  color: #808080;
}

.getPhoneNumber::after{
  border: none;
}

.box_commodity{
  margin-top: 10px;
  padding: 10px;
  background-color: #FFF;
  overflow: hidden;
}

.commodity_photo{
  float: left;
}

.commodity_photo > image{
  width: 80px;
  height: 60px;
}

.commodity_describe{
  float: left;
  margin-left: 10px;
}

.commodity_name{
  margin-bottom: 2px;
  font-size: 15px;
}

.commodity_startTime{
  margin-bottom: 4px;
  font-size: 13px;
  color: #808080;
}

.commodity_price{
  font-size: 13px;
  color: #fb5b1a;
}

.box_ticket{
  margin-top: 10px;
  padding: 10px;
  background-color: #FFF;
  overflow: hidden;
}

.ticket_title{
  float: left;
  font-size: 14px;
}

.ticket_name{
  float: right;
  font-size: 14px;
}

.ticket_name > image{
  width: 16px;
  height: 16px;
}

.box_payType{
  margin-top: 10px;
  padding: 10px;
  background-color: #FFF;
  overflow: hidden;
}

.wxPay_icon{
  float: left;
  height: 42px;
  line-height: 42px;
}

.wxPay_icon > image{
  margin-top: 8.5px;
  width: 27px;
  height: 25px;
}

.wxPay_title{
  float: left;
  margin-left: 10px;
  height: 42px;
}

.wxPay_name{
  margin-bottom: 3px;
  font-size: 15px;
  color: #292929;
}

.wxPay_content{
  font-size: 12px;
  color:#8f8e8e;
}

.wxPay_check{
  float: right;
  height: 42px;
  line-height: 42px;
}

.wxPay_check > image{
  width: 16px;
  height: 16px;
}

.footer{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 44px;
  overflow: hidden;
}

.orderMoney{
  float: left;
  width: 50%;
  height: 100%;
  line-height: 44px;
  text-align: right;
  background-color: #FFF;
}

.orderMonty_text{
  margin-right: 10px;
}

.orderMoney_price{
  color: #28B2D9;
}

.payMent{
  float: right;
  width: 50%;
  height: 100%;
  line-height: 44px;
  text-align: center;
  color: #FFF;
  background-color: #28B2D9;
}